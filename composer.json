{
    "name": "roots/bedrock",
    "type": "project",
    "license": "MIT",
    "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
    "homepage": "https://roots.io/bedrock/",
    "authors": [{
        "name": "Scott Walkinshaw",
        "email": "scott.walkinshaw@gmail.com",
        "homepage": "https://github.com/swalkinshaw"
    }, {
        "name": "Ben Word",
        "email": "ben@benword.com",
        "homepage": "https://github.com/retlehs"
    }],
    "keywords": [
        "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
    ],
    "support": {
        "issues": "https://github.com/roots/bedrock/issues",
        "forum": "https://discourse.roots.io/category/bedrock"
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://wpackagist.org"
    }],
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.0.12",
        "vlucas/phpdotenv": "^2.0.1",
        "johnpbloch/wordpress": "4.6.1",
        "oscarotero/env": "^1.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "roots/soil": "3.7.1",

        "wpackagist-plugin/error-log-monitor": "1.5",
        "wpackagist-plugin/wp-crontrol": "1.3.1",
        "wpackagist-plugin/broken-link-checker": "1.11.1",
        "wpackagist-plugin/transients-manager": "1.7.3",
        "wpackagist-plugin/kint-debugger": "1.0.0",
        "wpackagist-plugin/query-monitor": "2.13.1",
        "wpackagist-plugin/debug-objects": "2.3.1",
        "wpackagist-plugin/debug-this": "0.4",
        "wpackagist-plugin/plugin-organizer": "7.2",
        "wpackagist-plugin/plugin-groups": "1.1.0",
        "wpackagist-plugin/disable-comments": "1.5.2",
        "wpackagist-plugin/validated": "2.1.1",
        "wpackagist-plugin/seo-image-optimizer": "1.0.2",
        "wpackagist-plugin/dom-seo-image": "1.0.3",
        "wpackagist-plugin/woocommerce-remove-all-products": "1.0.4",
        "wpackagist-plugin/wp-spamshield": "1.9.9.4",
        "wpackagist-plugin/mailchimp-for-wp": "4.0.7",
        "wpackagist-plugin/better-analytics": "1.1.4",
        "wpackagist-plugin/xml-sitemap-feed": "4.7.4",
        "wpackagist-plugin/sitecondor-seo": "1.3.4",
        "wpackagist-plugin/autodescription": "2.7.0",
        "wpackagist-plugin/wp-sweep": "1.0.8",
        "wpackagist-plugin/term-management-tools": "1.1.4",
        "wpackagist-plugin/duplicate-post": "3.0.3",
        "wpackagist-plugin/wp-editor": "1.2.6.3",
        "wpackagist-plugin/wp-edit": "4.0",
        "wpackagist-plugin/shortcode-ui": "0.6.2",
        "wpackagist-plugin/global-meta-box-order": "1.0.3",
        "wpackagist-plugin/stream": "3.1.1",
        "wpackagist-plugin/favicon-by-realfavicongenerator": "1.3.8",
        "wpackagist-plugin/xslt": "1.1.0",
        "wpackagist-plugin/auto-terms-of-service-and-privacy-policy": "1.7",
        "wpackagist-plugin/wp-retina-2x": "4.6.0",
        "wpackagist-plugin/cpt-onomies": "1.3.5",
        "wpackagist-plugin/tinywym-editor": "1.2.5",
        "wpackagist-plugin/woocommerce": "2.6.7"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5.1"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
        ]
    }
}
